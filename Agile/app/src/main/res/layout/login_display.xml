<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Post IUT"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/postIUT"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_gravity="center"
        android:hint="Login"
        android:text="@string/Login"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/mdp"
        android:hint="Mot de passe"
        android:text="@string/mot_de_passe"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/login" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Connection"
        android:id="@+id/buttonConnection"
        android:layout_alignTop="@+id/buttonOublié"
        android:layout_alignStart="@+id/mdp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="ID oublié"
        android:id="@+id/buttonOublié"
        android:layout_below="@+id/mdp"
        android:layout_alignEnd="@+id/mdp"
        android:layout_marginTop="43dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informations"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="Email"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/postIUT"
        android:layout_alignStart="@+id/login" />

</RelativeLayout>
